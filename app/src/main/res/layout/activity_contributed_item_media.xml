<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
tools:context="org.nus.trailblaze.views.ContributedItemMediaActivity">


<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:padding="10dp"
    android:text="Add Audio/Video Clip" />

<EditText
    android:id="@+id/editText_Title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textView"
    android:layout_marginTop="31dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Title" />

<TextView
    android:id="@+id/textView_Comment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/editText_Title"
    android:layout_alignRight="@+id/editText_Title"
    android:layout_below="@+id/editText_Title"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="24dp"
    android:text="Choose Audio/Video" />

    <ImageButton
        android:id="@+id/btnChooseAudio"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView_Comment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        app:srcCompat="@android:drawable/presence_audio_online" />

    <Button
        android:id="@+id/btnUploadAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Save" />
</RelativeLayout>





